                android:layout_height="match_parent"
                android:padding="2dp"
                android:id="@+id/bu25"
                style="@style/Base.Widget.AppCompat.Button"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Reset"
        android:layout_weight=".10"
        android:gravity="center"
        android:textSize="25dp"
        android:padding="2dp"
        android:id="@+id/reset"
        />

</LinearLayout>
