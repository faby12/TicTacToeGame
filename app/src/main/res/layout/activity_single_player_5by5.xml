                android:layout_height="match_parent"
                android:id="@+id/bu1"
                android:padding="2dp"
                android:textSize="50dp"
                style="@style/Base.Widget.AppCompat.Button"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="50dp"
                android:padding="2dp"
                android:id="@+id/bu2"
                style="@style/Base.Widget.AppCompat.Button"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="50dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:id="@+id/bu3"
                style="@style/Base.Widget.AppCompat.Button"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="50dp"
                android:layout_height="match_parent"
